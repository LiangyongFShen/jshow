        android:layout_below="@id/title"
        android:layout_marginTop="174px"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:id="@+id/viewerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看人数"
                android:textSize="42px"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/viewercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/viewer"
                android:layout_marginTop="30px"
                android:text="1234"
                android:textSize="57px"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="2px"
            android:layout_height="111px"
            android:layout_alignTop="@id/viewerlayout"
            android:layout_toRightOf="@id/viewerlayout"
            android:layout_marginLeft="117px"
            android:layout_marginTop="10px"
            android:background="#777777"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line"
            android:layout_marginLeft="117px">
            <TextView
                android:id="@+id/praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞人数"
                android:textSize="42px"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/praisecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/praise"
                android:layout_marginTop="30px"
                android:text="1234"
                android:textSize="57px"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/return_main"
        android:layout_width="999px"
        android:layout_height="132px"
        android:layout_below="@id/infolayout"
        android:layout_marginTop="525px"
        android:layout_centerHorizontal="true"
        android:text="返回首页"
        android:textColor="@color/red"
        android:textSize="@dimen/button_text_size"
        android:background="@drawable/main_btn_style"
        />
